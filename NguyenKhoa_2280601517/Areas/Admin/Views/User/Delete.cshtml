@using NguyenKhoa_2280601517.Areas.Admin.Models
@model UserViewModel
@{
    ViewData["Title"] = "Xác nhận Xóa Người dùng";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h2>@ViewData["Title"]</h2>
<h3 class="text-danger">Bạn có chắc chắn muốn xóa người dùng này?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-3">Họ và Tên</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Vai trò</dt>
        <dd class="col-sm-9">@Model.Role</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
