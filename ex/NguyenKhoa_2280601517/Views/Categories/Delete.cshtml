@using NguyenKhoa_2280601517.Models
@model Category

@{
    ViewData["Title"] = "XÁC NHẬN XÓA DANH MỤC";
}

<h2 class="mb-4 text-primary">@ViewData["Title"]</h2>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
     
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light py-3">
                <h5 class="mb-0 text-muted">
                    <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i>Vui lòng xác nhận hành động
                </h5>
            </div>
            <div class="card-body">
                <p class="text-center fs-5">Bạn có chắc chắn muốn xóa vĩnh viễn danh mục sau không?</p>

                <div class="text-center my-3 py-3 px-2 bg-light border rounded">
                    <i class="bi bi-tag-fill fs-1 text-danger d-block mb-2"></i>
                    <h4 class="text-danger fw-bold">"@Model.Name"</h4>
                    @* Bạn có thể thêm thông tin khác ở đây nếu cần, ví dụ: số lượng sản phẩm thuộc danh mục này *@
                    @* <p class="small text-muted mb-0">Hiện có X sản phẩm thuộc danh mục này.</p> *@
                </div>

                <div class="alert alert-warning text-center mt-3" role="alert">
                    <strong>Cảnh báo:</strong> Hành động này <strong>không thể hoàn tác</strong>.
                    Nếu có sản phẩm đang thuộc danh mục này, bạn có thể cần cập nhật chúng sau khi xóa.
                </div>

                <form asp-action="DeleteConfirmed" method="post">
                    @Html.AntiForgeryToken() @* Quan trọng cho bảo mật *@
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                            <i class="bi bi-x-circle"></i> Hủy bỏ
                        </a>
                        <button type="submit" class="btn btn-danger px-4 py-2">
                            <i class="bi bi-trash-fill"></i> Xóa vĩnh viễn
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card-body .bg-light.border.rounded {
            border-color: #e9ecef !important; /* Tăng độ tương phản cho viền */
        }
    </style>
}