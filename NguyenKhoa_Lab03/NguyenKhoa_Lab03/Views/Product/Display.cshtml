@model NguyenKhoa_Lab03.Models.Product

@{
    ViewData["Title"] = @Model.Name;
}

<div class="container mt-4">
    <h2>@Model.Name</h2>
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-width: 300px;">
            }
            else
            {
                <p class="text-muted">Không có hình ảnh sản phẩm.</p>
            }
        </div>
        <div class="col-md-6">
            <h3 class="fw-bold text-success">Giá: @Model.Price.ToString("N0") VNĐ</h3>
            <p class="lead mb-3">@Model.Description</p>
            <div>
                <a class="btn btn-outline-info rounded-pill btn-sm mt-3" asp-action="Index">
                    <i class="bi bi-arrow-left-short"></i> Trở về danh sách
                </a>
            </div>
        </div>
    </div>
</div>